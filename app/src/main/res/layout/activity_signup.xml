<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgsign"
    tools:context=".SignUp">

    <Button
        android:id="@+id/signupB_SignUP"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@id/signupLL_RePassword"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/bgc_button_amber"
        android:text="Registrarse"
        android:textAllCaps="false"
        android:textColor="@color/White"
        android:textSize="20dp" />

    <LinearLayout
        android:id="@+id/signupLL_UsernName"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/signupTV_CreateAccount"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/signupIV_UserName"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:layout_marginHorizontal="10dp"
            android:layout_weight="0"
            app:srcCompat="@drawable/ic_user" />
        <EditText
            android:id="@+id/signupET_UserName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:ems="10"
            android:hint="username"
            android:inputType="textPersonName"
            android:paddingLeft="15dp"
            android:textColor="@color/black" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/signupLL_Email"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/signupLL_UsernName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/signupIV_Email"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:layout_marginHorizontal="10dp"
            android:layout_weight="0"
            app:srcCompat="@drawable/ic_email" />
        <EditText
            android:id="@+id/signupET_Email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:ems="10"
            android:hint="your@email.com"
            android:inputType="textEmailAddress"
            android:paddingLeft="15dp"
            android:textColor="@color/black" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/signupLL_Password"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/signupLL_Email"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/signupIV_Password"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:layout_marginHorizontal="10dp"
            android:layout_weight="0"
            app:srcCompat="@drawable/ic_password" />
        <EditText
            android:id="@+id/signupET_Password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:ems="10"
            android:hint="password"
            android:inputType="textPassword"
            android:paddingLeft="15dp"
            android:textColor="@color/bgc_Dark" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/signupLL_RePassword"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/signupLL_Password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/signupIV_RePassword"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:layout_marginHorizontal="10dp"
            android:layout_weight="0"
            app:srcCompat="@drawable/ic_password" />
        <EditText
            android:id="@+id/signupET_RePassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:ems="10"
            android:hint="confirm password"
            android:inputType="textPassword"
            android:paddingLeft="15dp"
            android:textColor="@color/bgc_Dark" />
    </LinearLayout>

    <ImageView
        android:id="@+id/signupIV_Back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:tint="@color/bgc_Primary"
        android:src="@drawable/ic_back"
        />
    <TextView
        android:id="@+id/signupTV_CreateAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:fontFamily="@font/minionpro_bold"
        android:text="Crear Cuenta"
        android:textColor="@color/bc_Dark"
        android:textSize="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="100dp"
        android:fontFamily="@font/minionpro_regular"
        android:text="¿Ya tienes una cuenta?"
        android:textColor="@color/gc_Dark"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/signupTV_SignIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="70dp"
        android:fontFamily="@font/minionpro_bold"
        android:text="Inicia Sesión"
        android:textColor="@color/bc_Primary"
        android:textSize="22dp" />

</RelativeLayout>