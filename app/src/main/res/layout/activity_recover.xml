<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgsign"
    tools:context=".Recover">


    <Button
        android:id="@+id/recoverB_Recover"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@id/signinLL_Email"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/bgc_button_amber"
        android:text="Recuperar"
        android:textAllCaps="false"
        android:textColor="@color/White"
        android:textSize="20dp" />

    <LinearLayout
        android:id="@+id/signinLL_Email"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/signinTV_ForgotPsw"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/signinIV_Email"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:layout_marginHorizontal="10dp"
            android:layout_weight="0"
            app:srcCompat="@drawable/ic_email" />
        <EditText
            android:id="@+id/signinET_Email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:ems="10"
            android:hint="username"
            android:inputType="textPersonName"
            android:paddingLeft="15dp"
            android:textColor="@color/black" />
    </LinearLayout>

    <ImageView
        android:id="@+id/signinIV_Back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:tint="@color/bgc_Primary"
        android:src="@drawable/ic_back"
        />
    <TextView
        android:id="@+id/signinTV_StartSession"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:fontFamily="@font/minionpro_bold"
        android:text="Recuperar Contraseña"
        android:textColor="@color/bc_Dark"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/signinTV_ForgotPsw"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/signinTV_StartSession"
        android:layout_centerInParent="true"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/minionpro_regular"
        android:inputType="textMultiLine"
        android:text="Déjanos tu correo para poder enviarte tu contraseña"
        android:textAlignment="center"
        android:textColor="@color/gc_Dark"
        android:textSize="18dp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="100dp"
        android:fontFamily="@font/minionpro_regular"
        android:text="¿No tienes una cuenta?"
        android:textColor="@color/gc_Dark"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/signinTV_SignUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="70dp"
        android:fontFamily="@font/minionpro_bold"
        android:text="Registrate"
        android:textColor="@color/bc_Primary"
        android:textSize="22dp" />

</RelativeLayout>